{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.eslint"],
  "cSpell.enableFiletypes": ["typescriptreact"],
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "cSpell.words": [
    "fontsource",
    "Hervanta",
    "Kaijantie",
    "latlng",
    "Neue",
    "openapi",
    "Parens",
    "pino",
    "Roadinfo",
    "Robota",
    "Roboto",
    "Tutkijankatu"
  ],
  "better-comments.tags": [
    {
      "tag": "FIXME",
      "color": "#FF2D00",
      "underline": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "BUG",
      "color": "#FF2D00",
      "underline": false,
      "bold": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "NOTE",
      "color": "#3498DB",
      "backgroundColor": "transparent",
      "italic": true
    },
    {
      "tag": "INFO",
      "color": "#3498DB",
      "backgroundColor": "transparent",
      "italic": true
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "TODO",
      "color": "#FF8C00",
      "backgroundColor": "transparent"
    }
  ],
  "[shellscript]": {
    "editor.defaultFormatter": "shakram02.bash-beautify"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#837608",
    "activityBar.background": "#837608",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#0dd2bd",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#837608",
    "statusBar.background": "#534b05",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#837608",
    "statusBarItem.remoteBackground": "#534b05",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#534b05",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#534b0599",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#534b05"
}
